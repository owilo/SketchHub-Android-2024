<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/gray"/>
        </shape>
    </item>

    <item>
        <rotate android:fromDegrees="45">
            <layer-list>
                <item android:gravity="center" android:width="16dp" android:height="16dp" android:bottom="10dp">
                    <shape android:shape="oval">
                        <solid android:color="@color/dark_gray"/>
                    </shape>
                </item>

                <item android:gravity="center" android:width="5dp" android:height="24dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/dark_gray"/>
                        <corners android:radius="2dp"/>
                    </shape>
                </item>

                <item android:gravity="center" android:width="7dp" android:height="7dp" android:bottom="10dp">
                    <shape android:shape="oval">
                        <solid android:color="@color/gray"/>
                    </shape>
                </item>
            </layer-list>
        </rotate>
    </item>



</layer-list>